<a href='/categories/new'> Add bookmark </a>

<ul>
<% sorted_bookmarks =  @bookmarks.sort { |a,b| a.genre.downcase <=> b.genre.downcase } %>
<% sorted_bookmarks.each do | bookmark | %>
  <li>
    <%= bookmark.url %>
    <br>
    <%= bookmark.name %>
    <br>
    <%= bookmark.genre %>
    <a href='/categories/<%=bookmark.id%>/edit'> edit </a>
    <form action='/categories/<%=bookmark.id%>/delete' method='post'>
      <button> delete </button>
    </form>
  </li>
<% end %>
</ul>

